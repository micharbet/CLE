CLE_REPO=https://github.com/micharbet/CLE.git

cdc () {
	cd $CLE_DK
	_clebold CLE development kit: $PWD;
	git status
}

cd
CLE_DK=$PWD/CLE
if [ ! -d $CLE_DK/.git ]; then
	_cleask "Clone from github?" && git clone $CLE_REPO || return
fi
cdc



# helper function to find module by incomplete name
_dk_choosefile () {
	local F
	F=`ls $CLE_DK/modules/* $CLE_DK/devmods/* 2>/dev/null | grep $1`
	case `wc -w <<<$F` in
	0)
		echo no such module: $1
		return 1;;
	1)
		FILENAME=$F;;
	*)
		PS3="$_CL choose module # $_CN"
		select FILENAME in $F; do
			[ -n "$FILENAME" ] && break
		done
		;;
	esac
}

## `cle e [mod]`    - edit clerc file ev. specified module
_cle_e () (
	cd $CLE_DK
	if [ $1 ]; then
		_dk_choosefile $1
	else
		FILENAME=$CLE_DK/clerc.sh
	fi
	vim $FILENAME
)

## `cle cp [mod]`   - copy development version of clerc or a module
_cle_cp() {
	local DEST FILENAME
	pushd $CLE_DK >/dev/null
	if [ $1 ]; then
		_dk_choosefile $1
		DEST=$CLE_D/`basename $FILENAME`
	else
		FILENAME=clerc.sh
		DEST=$CLE_RC
	fi

	_clebold " ${_CU}diff $DEST $FILENAME${_Cu}"
	if diff $DEST $FILENAME >/dev/null; then
		echo No diff...
		popd
	else
		_cleask "replace $DEST?" || return
		cp $FILENAME $DEST
		popd >/dev/null
		[[ $FILENAME =~ /-mod ]] && cle reload
		return 0
	fi
}

## `cle ln [mod]`   - symlink a module to the live directory
_cle_ln() {
	local DEST FILENAME
	_dk_choosefile $1
	DEST=$CLE_D/`basename $FILENAME`
	ln -s $FILENAME $DEST && cle reload
}



## `cle func`       - list all current bash functions
_cle_func () {
	declare -f |sed -n '/_cle.\+\s()/p'
}


## `cle commit`     - commit changes into git (also generate clerc from clerc.sh
_cle_commit () (
	# generate short version of CLE
	make
	gicom $1
)

