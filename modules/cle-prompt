case "$1" in
rh)		## `cle prompt rh`       - oneline (almost) RH default
	cle pa '-^E-\n'
	cle p1 '[\u^CD@^C1^h '
	cle p2 '\w^C1] '
	cle p3 '\$ '
	;;
twoline)	 ## `cle prompt twoline`  - two line prompt
	cle pa '- ^E -\n'
	cle p1 '\u'
	cle p2 '@^h ${CLE_IP:+(^i)} \t\n'
	cle p3 ' \w \$ '
	;;
triliner)	## `cle prompt triliner` - even more space for prompt
	cle pa '--- ^E ^s" \t ---'
	cle p1 '\n\u'
	cle p2 '@^h ^CD^i\n'
	cle p3 ' \w^CD ^g ^C3\$ '
	;;
_compreply)
	echo "rh twoline triliner"    #: just a simple completion reply for now
	local COMPREPLYCMD="cle prompt _compreply"
	;;
"")
	echo Use following commands to setup your prompt from
	echo predefined schemes:
	cle help "cle prompt"
esac

